<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background">

    <TextView
        android:id="@+id/textView_title_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_top_margin"
        android:fontFamily="cursive"
        android:textSize="24dp"
        android:text="SecretGift"
        app:layout_constraintTop_toTopOf="parent"
        android:textAlignment="center"
        android:textColor="@color/brown" />

    <TextView
        android:id="@+id/textView_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_top_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:fontFamily="cursive"
        android:gravity="left"
        android:text="Opciones de sala"
        android:textColor="@color/brown"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_title_options" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_options"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_margin="16dp"
        android:layout_marginTop="@dimen/activity_top_margin"
        android:backgroundTint="#00FFFFFF"
        android:padding="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_options">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Event Date -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha de evento:"
                android:textColor="@color/brown"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editText_date_options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="DD/MM/YYYY"
                android:inputType="date"
                android:textColor="@color/brown"
                android:textColorHint="@color/brown" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_top_margin"
                android:text="Numero de participantes:"
                android:textColor="@color/brown"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editText_players_options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="E.g.: 5"
                android:inputType="number"
                android:textColor="@color/brown"
                android:textColorHint="@color/brown" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_top_margin"
                android:text="Precio máximo:"
                android:textColor="@color/brown"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editText_maxPrice_options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="E.g.: 20€"
                android:inputType="numberDecimal"
                android:textColor="@color/brown"
                android:textColorHint="@color/brown" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_top_margin"
                android:text="Incompatibilidades:"
                android:textColor="@color/brown"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/layout_incompatibilities"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/spinner_player1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="↔"
                        android:textColor="@color/brown"
                        android:textSize="24sp" />

                    <Spinner
                        android:id="@+id/spinner_player2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <Button
                        android:id="@+id/btn_add_incompatibilities"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:backgroundTint="@color/brown"
                        android:text="+"
                        android:textColor="#FFFFFF" />
                </LinearLayout>

            </LinearLayout>


            <Button
                android:id="@+id/btn_SaveChanges"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_top_margin"
                android:backgroundTint="@color/brown"
                android:text="Guardar Cambios"
                android:textColor="#FFFFFF" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
