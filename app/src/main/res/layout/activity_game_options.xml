<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background">

    <TextView
        android:id="@+id/textView_title_options"
        style="@style/custom_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:text="SecretGift"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/icon_back"
        style="@style/custom_back_image"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_options"
        style="@style/custom_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Opciones de sala"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_title_options" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_options"
        android:layout_width="375dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:layout_marginTop="@dimen/activity_top_margin"
        android:backgroundTint="#00FFFFFF"
        android:padding="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="1dp"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_options">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Event Date -->
            <TextView
                android:id="@+id/textView_event"
                style="@style/custom_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha de evento:"
                android:textSize="14dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edit_text_event_date"
                style="@style/custom_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="DD/MM/YYYY"
                android:inputType="date" />

            <TextView
                style="@style/custom_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Numero de participantes:"
                android:textSize="14dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editText_players_options"
                style="@style/custom_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="E.g.: 5"
                android:inputType="number" />

            <TextView
                style="@style/custom_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Precio máximo:"
                android:textSize="14dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editText_maxPrice_options"
                style="@style/custom_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="E.g.: 20€"
                android:inputType="numberDecimal" />

            <!-- Sección de Reglas con RecyclerView -->
            <TextView
                style="@style/custom_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reglas:"
                android:textSize="24dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_rules"
                android:layout_width="341dp"
                android:layout_height="0dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_weight="1"
                android:scrollbars="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:itemCount="26" />

            <TextView
                android:id="@+id/textView_incompatibilities"
                style="@style/custom_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:text="Incompatibilidades: No hay incompatibilidades"
                android:textSize="14dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_add_incompatibilities"
                style="@style/custom_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:backgroundTint="@color/maincolor"
                android:text="+"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btn_SaveChanges"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_top_margin"
                android:backgroundTint="@color/maincolor"
                android:text="Guardar Cambios"
                android:textColor="#FFFFFF" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
