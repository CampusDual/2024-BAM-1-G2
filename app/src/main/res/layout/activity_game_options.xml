<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background">
    <ProgressBar
        android:id="@+id/loader"
        android:layout_width="match_parent"
        android:layout_marginTop="250dp"
        android:layout_height="200dp"
        android:visibility="gone"
        android:indeterminateTint="@color/brown"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ProgressBar>
    <Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/icon_back"
            style="@style/custom_back_image"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            />

        <TextView
            android:id="@+id/tv_game_name"
            style="@style/custom_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/maincolor"
            />
    </Toolbar>


    <TextView
        android:id="@+id/textView_options"
        style="@style/custom_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cursive_serif_book"
        android:text="@string/game_settings"
        android:textSize="24dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_options"
        android:layout_width="375dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:layout_marginTop="@dimen/activity_top_margin"
        android:backgroundTint="#00FFFFFF"
        android:padding="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_options"
        app:layout_constraintVertical_bias="0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Event Date -->
            <TextView
                android:id="@+id/textView_event"
                style="@style/custom_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/game_date"
                android:textSize="20sp"
                 />

            <EditText
                android:id="@+id/editTextEventDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:focusable="false"
                android:textColor="@color/white"
                android:focusableInTouchMode="false"
                android:clickable="true" />


            <TextView
                style="@style/custom_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cursive_serif_book"
                android:text="@string/min_cost"
                android:textSize="20sp"
                 />

            <EditText
                android:id="@+id/editText_minPrice_options"
                style="@style/custom_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="E.g.: 20€"
                android:inputType="numberDecimal" />

            <TextView
                style="@style/custom_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="@string/max_cost"
                android:textSize="20sp"
                 />

            <EditText
                android:id="@+id/editText_maxPrice_options"
                style="@style/custom_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="E.g.: 20€"
                android:inputType="numberDecimal" />

            <!-- Sección de Reglas con RecyclerView -->
            <TextView
                style="@style/custom_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Reglas:"
                android:textSize="20sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_rules"
                android:layout_width="341dp"
                android:layout_height="0dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_weight="1"
                android:scrollbars="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:itemCount="26" />

            <TextView
                android:id="@+id/textView_incompatibilities"
                style="@style/custom_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/cursive_serif_book"
                android:text="Las incompatibilidades son bidireccionales "
                android:textColor="@color/red"
                android:textSize="14dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_add_incompatibilities"
                style="@style/custom_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:backgroundTint="@color/maincolor"
                android:text="+"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btn_SaveChanges"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_top_margin"
                android:backgroundTint="@color/maincolor"
                android:text="Guardar Cambios"
                android:textColor="#FFFFFF" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
