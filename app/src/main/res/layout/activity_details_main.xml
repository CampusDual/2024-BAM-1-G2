<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background"
    tools:context=".presentation.main.MainActivity">

    <!-- Toolbar -->

    <!-- LinearLayout para el nombre -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/brown"
        android:backgroundTint="#00FFFFFF"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Información de la sala"
        app:titleTextColor="@android:color/white" />

    <LinearLayout
        android:id="@+id/linear_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <TextView
            android:id="@+id/text_name"
            style="@style/custom_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:gravity="center_vertical"
            android:text="Nombre:"
            android:textColor="@color/brown"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="20dp"
            android:textColor="#FAF8F8" />

    </LinearLayout>

    <!-- LinearLayout para el estado -->
    <LinearLayout
        android:id="@+id/linear_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linear_name">

        <TextView
            android:id="@+id/text_str_status"
            style="@style/custom_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:gravity="center_vertical"
            android:text="Estado:"
            android:textColor="@color/brown"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="20dp"
            android:textColor="#F4F1F1" />

    </LinearLayout>

    <!-- LinearLayout para el código de juego -->
    <LinearLayout
        android:id="@+id/linear_game_code"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linear_status">

        <TextView
            android:id="@+id/text_str_game_code"
            style="@style/custom_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:gravity="center_vertical"
            android:text="Código de Juego:"
            android:textColor="@color/brown"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_game_code"
            style="@style/custom_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="20dp"
            android:textColor="#F8F5F5" />

    </LinearLayout>

    <!-- LinearLayout para el costo máximo -->
    <LinearLayout
        android:id="@+id/linear_cost"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linear_game_code">

        <TextView
            android:id="@+id/text_str_max_cost"
            style="@style/custom_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:gravity="center_vertical"
            android:text="Costo Máximo:"
            android:textColor="@color/brown"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_max_cost"
            style="@style/custom_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="20dp"
            android:textColor="#FDFCFC" />

    </LinearLayout>

    <!-- LinearLayout para la fecha del juego -->
    <LinearLayout
        android:id="@+id/linear_game_date"
        android:layout_width="412dp"
        android:layout_height="78dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linear_cost">

        <TextView
            android:id="@+id/text_str_game_date"
            style="@style/custom_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:gravity="center_vertical"
            android:text="Fecha del Juego:"
            android:textColor="@color/brown"
            android:textSize="14sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/text_game_date"
            style="@style/custom_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="20dp"
            android:textColor="#F2EDED" />

    </LinearLayout>

    <Button
        android:id="@+id/button_save"
        style="@style/custom_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:text="Guardar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linear_game_date" />

</androidx.constraintlayout.widget.ConstraintLayout>
